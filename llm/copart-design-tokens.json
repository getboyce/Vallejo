          "500": { "$value": "#7A8691", "$type": "color", "$description": "Subtle — placeholders, captions" },
          "700": { "$value": "#46525D", "$type": "color", "$description": "Body — body copy, descriptions" },
          "900": { "$value": "#2F333C", "$type": "color", "$description": "Ink — headlines, primary text" }
        },
        "success": {
          "light":  { "$value": "#D7E8D1", "$type": "color" },
          "main":   { "$value": "#4CA830", "$type": "color" },
          "dark":   { "$value": "#1B6600", "$type": "color" },
          "icon":   { "$value": "#238202", "$type": "color" }
        },
        "warning": {
          "light":  { "$value": "#FFF7D1", "$type": "color" },
          "main":   { "$value": "#EC9C0D", "$type": "color" },
          "dark":   { "$value": "#705700", "$type": "color" },
          "icon":   { "$value": "#B07800", "$type": "color" }
        },
        "error": {
          "light":  { "$value": "#FCE5E9", "$type": "color" },
          "main":   { "$value": "#D42A54", "$type": "color" },
          "dark":   { "$value": "#8C1D35", "$type": "color" },
          "icon":   { "$value": "#C22248", "$type": "color" }
        },
        "orange": {
          "50":  { "$value": "#FDF7F2", "$type": "color", "$description": "Accent tint — promo surfaces, warm page backgrounds" },
          "100": { "$value": "#FAEEE5", "$type": "color", "$description": "Accent lightest — hover fills, subtle warm highlights" },
          "200": { "$value": "#F8E2D3", "$type": "color", "$description": "Accent light — badge fills, selected states, featured backgrounds" },
          "600": { "$value": "#D86518", "$type": "color", "$description": "Accent primary — secondary CTAs, badges, urgency indicators" },
          "800": { "$value": "#933C06", "$type": "color", "$description": "Accent dark — hover/pressed states on accent elements" },
          "900": { "$value": "#50250B", "$type": "color", "$description": "Accent darkest — text on warm surfaces, headings in warm contexts" }
        },
        "white":  { "$value": "#FFFFFF", "$type": "color" },
        "black":  { "$value": "#000000", "$type": "color" }
      },

      "semantic": {
        "background": {
          "primary":   { "$value": "{copart.color.primitive.white}", "$type": "color" },
          "secondary": { "$value": "{copart.color.primitive.neutral.100}", "$type": "color" },
          "tertiary":  { "$value": "{copart.color.primitive.blue.50}", "$type": "color" },
          "inverse":   { "$value": "{copart.color.primitive.neutral.900}", "$type": "color" }
        },
        "text": {
          "primary":   { "$value": "{copart.color.primitive.neutral.900}", "$type": "color" },
          "secondary": { "$value": "{copart.color.primitive.neutral.700}", "$type": "color" },
          "tertiary":  { "$value": "{copart.color.primitive.neutral.500}", "$type": "color" },
          "disabled":  { "$value": "{copart.color.primitive.neutral.300}", "$type": "color" },
          "inverse":   { "$value": "{copart.color.primitive.white}", "$type": "color" },
          "link":      { "$value": "{copart.color.primitive.blue.600}", "$type": "color" },
          "link-hover": { "$value": "{copart.color.primitive.blue.800}", "$type": "color" }
        },
        "border": {
          "default":  { "$value": "{copart.color.primitive.neutral.300}", "$type": "color" },
          "subtle":   { "$value": "{copart.color.primitive.neutral.200}", "$type": "color" },
          "strong":   { "$value": "{copart.color.primitive.neutral.500}", "$type": "color" },
          "focus":    { "$value": "{copart.color.primitive.blue.600}", "$type": "color" },
          "error":    { "$value": "{copart.color.primitive.error.main}", "$type": "color" },
          "success":  { "$value": "{copart.color.primitive.success.main}", "$type": "color" }
        },
        "interactive": {
          "primary":          { "$value": "{copart.color.primitive.blue.600}", "$type": "color" },
          "primary-hover":    { "$value": "{copart.color.primitive.blue.800}", "$type": "color" },
          "primary-active":   { "$value": "#042D7A", "$type": "color" },
          "secondary":        { "$value": "{copart.color.primitive.blue.100}", "$type": "color" },
          "secondary-hover":  { "$value": "{copart.color.primitive.blue.200}", "$type": "color" },
          "accent":           { "$value": "{copart.color.primitive.orange.600}", "$type": "color", "$description": "Secondary CTA, registration, urgency" },
          "accent-hover":     { "$value": "{copart.color.primitive.orange.800}", "$type": "color" },
          "accent-surface":   { "$value": "{copart.color.primitive.orange.200}", "$type": "color", "$description": "Badge fills, featured content backgrounds" },
          "destructive":      { "$value": "{copart.color.primitive.error.icon}", "$type": "color" },
          "destructive-hover": { "$value": "{copart.color.primitive.error.dark}", "$type": "color" },
          "disabled":         { "$value": "{copart.color.primitive.neutral.200}", "$type": "color" }
        },
        "feedback": {
          "success-bg":     { "$value": "{copart.color.primitive.success.light}", "$type": "color" },
          "success-text":   { "$value": "{copart.color.primitive.success.dark}", "$type": "color" },
          "success-border": { "$value": "{copart.color.primitive.success.main}", "$type": "color" },
          "success-icon":   { "$value": "{copart.color.primitive.success.icon}", "$type": "color" },
          "warning-bg":     { "$value": "{copart.color.primitive.warning.light}", "$type": "color" },
          "warning-text":   { "$value": "{copart.color.primitive.warning.dark}", "$type": "color" },
          "warning-border": { "$value": "{copart.color.primitive.warning.main}", "$type": "color" },
          "warning-icon":   { "$value": "{copart.color.primitive.warning.icon}", "$type": "color" },
          "error-bg":       { "$value": "{copart.color.primitive.error.light}", "$type": "color" },
          "error-text":     { "$value": "{copart.color.primitive.error.dark}", "$type": "color" },
          "error-border":   { "$value": "{copart.color.primitive.error.main}", "$type": "color" },
          "error-icon":     { "$value": "{copart.color.primitive.error.icon}", "$type": "color" },
          "info-bg":        { "$value": "#E0EBFF", "$type": "color" },
          "info-text":      { "$value": "{copart.color.primitive.blue.900}", "$type": "color" },
          "info-border":    { "$value": "{copart.color.primitive.blue.600}", "$type": "color" },
          "info-icon":      { "$value": "{copart.color.primitive.blue.600}", "$type": "color" }
        }
      },

      "primitive-dark": {
        "$description": "Dark mode primitive color ramps — same hue families with adjusted lightness for dark surfaces. Tints (50-200) become dark backgrounds; core values (600-900) become lighter for contrast.",
        "blue": {
          "50":  { "$value": "#0D1117", "$type": "color", "$description": "Brand tint — subtle blue-tinted dark backgrounds" },
          "100": { "$value": "#141E33", "$type": "color", "$description": "Brand lightest — info backgrounds, hover fills" },
          "200": { "$value": "#1E2A45", "$type": "color", "$description": "Brand light — selected rows, active backgrounds" },
          "600": { "$value": "#5B8EF0", "$type": "color", "$description": "Brand primary — CTAs, active links (5.8:1 on #1A1D23)" },
          "800": { "$value": "#7AAAF5", "$type": "color", "$description": "Brand hover — hover states, high emphasis" },
          "900": { "$value": "#B8D4FA", "$type": "color", "$description": "Brand text — titles, critical text on dark surfaces" }
        },
        "orange": {
          "50":  { "$value": "#1A1008", "$type": "color", "$description": "Accent tint — warm dark page backgrounds" },
          "100": { "$value": "#221710", "$type": "color", "$description": "Accent lightest — warm hover fills" },
          "200": { "$value": "#2E1F14", "$type": "color", "$description": "Accent light — badge fills, featured backgrounds" },
          "600": { "$value": "#E8873F", "$type": "color", "$description": "Accent primary — secondary CTAs, badges (4.1:1 on #1A1D23)" },
          "800": { "$value": "#F0A566", "$type": "color", "$description": "Accent hover — hover/pressed states" },
          "900": { "$value": "#F8C99A", "$type": "color", "$description": "Accent text — text on dark warm surfaces" }
        },
        "neutral": {
          "50":  { "$value": "#1A1D23", "$type": "color", "$description": "Page background — base dark canvas" },
          "100": { "$value": "#22262E", "$type": "color", "$description": "Surface — elevated backgrounds, cards" },
          "200": { "$value": "#2E3340", "$type": "color", "$description": "Muted — subtle dividers, disabled" },
          "300": { "$value": "#3A4150", "$type": "color", "$description": "Border — form fields, separators" },
          "500": { "$value": "#6E7A86", "$type": "color", "$description": "Subtle — placeholders, captions" },
          "700": { "$value": "#A8B2BC", "$type": "color", "$description": "Body — body copy, descriptions" },
          "900": { "$value": "#F0F1F3", "$type": "color", "$description": "Ink — headlines, primary text" }
        },
        "success": {
          "light":  { "$value": "#1A2E14", "$type": "color" },
          "main":   { "$value": "#6ABF4D", "$type": "color" },
          "dark":   { "$value": "#6ABF4D", "$type": "color" },
          "icon":   { "$value": "#6ABF4D", "$type": "color" }
        },
        "warning": {
          "light":  { "$value": "#2E2510", "$type": "color" },
          "main":   { "$value": "#E8B830", "$type": "color" },
          "dark":   { "$value": "#E8B830", "$type": "color" },
          "icon":   { "$value": "#E8B830", "$type": "color" }
        },
        "error": {
          "light":  { "$value": "#2E1219", "$type": "color" },
          "main":   { "$value": "#F06080", "$type": "color" },
          "dark":   { "$value": "#F06080", "$type": "color" },
          "icon":   { "$value": "#F06080", "$type": "color" }
        }
      },

      "dark": {
        "$description": "Dark mode semantic tokens — reference primitive-dark values",
        "background": {
          "primary":   { "$value": "#1A1D23", "$type": "color" },
          "secondary": { "$value": "{copart.color.primitive-dark.neutral.100}", "$type": "color" },
          "tertiary":  { "$value": "{copart.color.primitive-dark.neutral.200}", "$type": "color" },
          "overlay":   { "$value": "rgba(0,0,0,0.7)", "$type": "color" }
        },
        "text": {
          "primary":   { "$value": "{copart.color.primitive-dark.neutral.900}", "$type": "color" },
          "secondary": { "$value": "{copart.color.primitive-dark.neutral.700}", "$type": "color" },
          "tertiary":  { "$value": "{copart.color.primitive-dark.neutral.500}", "$type": "color" },
          "disabled":  { "$value": "#454D58", "$type": "color" }
        },
        "border": {
          "default":  { "$value": "{copart.color.primitive-dark.neutral.300}", "$type": "color" },
          "subtle":   { "$value": "{copart.color.primitive-dark.neutral.200}", "$type": "color" },
          "focus":    { "$value": "{copart.color.primitive-dark.blue.600}", "$type": "color" }
        },
        "interactive": {
          "primary":          { "$value": "{copart.color.primitive-dark.blue.600}", "$type": "color" },
          "primary-hover":    { "$value": "{copart.color.primitive-dark.blue.800}", "$type": "color" },
          "primary-active":   { "$value": "#4A7DE0", "$type": "color" },
          "selected-bg":      { "$value": "{copart.color.primitive-dark.blue.200}", "$type": "color" },
          "accent":           { "$value": "{copart.color.primitive-dark.orange.600}", "$type": "color", "$description": "Orange accent lightened for dark backgrounds (4.1:1 on #1A1D23)" },
          "accent-hover":     { "$value": "{copart.color.primitive-dark.orange.800}", "$type": "color" },
          "accent-surface":   { "$value": "{copart.color.primitive-dark.orange.200}", "$type": "color", "$description": "Warm tinted surface for dark mode badges/features" }
        },
        "feedback": {
          "success-bg":     { "$value": "{copart.color.primitive-dark.success.light}", "$type": "color" },
          "success-text":   { "$value": "{copart.color.primitive-dark.success.main}", "$type": "color" },
          "success-border": { "$value": "#4CA830", "$type": "color" },
          "success-icon":   { "$value": "{copart.color.primitive-dark.success.icon}", "$type": "color" },
          "warning-bg":     { "$value": "{copart.color.primitive-dark.warning.light}", "$type": "color" },
          "warning-text":   { "$value": "{copart.color.primitive-dark.warning.main}", "$type": "color" },
          "warning-border": { "$value": "{copart.color.primitive-dark.warning.main}", "$type": "color" },
          "warning-icon":   { "$value": "{copart.color.primitive-dark.warning.icon}", "$type": "color" },
          "error-bg":       { "$value": "{copart.color.primitive-dark.error.light}", "$type": "color" },
          "error-text":     { "$value": "{copart.color.primitive-dark.error.main}", "$type": "color" },
          "error-border":   { "$value": "{copart.color.primitive-dark.error.main}", "$type": "color" },
          "error-icon":     { "$value": "{copart.color.primitive-dark.error.icon}", "$type": "color" },
          "info-bg":        { "$value": "{copart.color.primitive-dark.blue.100}", "$type": "color" },
          "info-text":      { "$value": "{copart.color.primitive-dark.blue.800}", "$type": "color" },
          "info-border":    { "$value": "{copart.color.primitive-dark.blue.600}", "$type": "color" },
          "info-icon":      { "$value": "{copart.color.primitive-dark.blue.600}", "$type": "color" }
        }
      }
