      "5":  { "$value": "20px",  "$type": "dimension", "$description": "List item padding-y" },
      "6":  { "$value": "24px",  "$type": "dimension", "$description": "Default card padding, gutters" },
      "8":  { "$value": "32px",  "$type": "dimension", "$description": "Section gaps, sidebar padding" },
      "10": { "$value": "40px",  "$type": "dimension", "$description": "Major section separators" },
      "12": { "$value": "48px",  "$type": "dimension", "$description": "Page section margins" },
      "16": { "$value": "64px",  "$type": "dimension", "$description": "Large section breaks" },
      "20": { "$value": "80px",  "$type": "dimension", "$description": "Desktop outer margins" },
      "24": { "$value": "96px",  "$type": "dimension", "$description": "Hero section padding" },
      "32": { "$value": "128px", "$type": "dimension", "$description": "Full-page section spacing" }
    },

    "borderRadius": {
      "none":  { "$value": "0px",  "$type": "dimension" },
      "sm":    { "$value": "4px",  "$type": "dimension", "$description": "Checkboxes, small tags" },
