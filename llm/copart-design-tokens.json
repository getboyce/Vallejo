        "primary":   { "$value": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif", "$type": "fontFamily" },
        "monospace": { "$value": "'JetBrains Mono', 'SF Mono', 'Fira Code', 'Cascadia Code', monospace", "$type": "fontFamily" }
      },
      "font-weight": {
        "thin":       { "$value": 100, "$type": "fontWeight" },
        "extralight": { "$value": 200, "$type": "fontWeight" },
        "light":      { "$value": 300, "$type": "fontWeight" },
        "regular":    { "$value": 400, "$type": "fontWeight" },
        "medium":     { "$value": 500, "$type": "fontWeight" },
        "semibold":   { "$value": 600, "$type": "fontWeight" },
        "bold":       { "$value": 700, "$type": "fontWeight" },
        "extrabold":  { "$value": 800, "$type": "fontWeight" },
        "black":      { "$value": 900, "$type": "fontWeight" }
      },
      "scale": {
        "display-lg": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.black}", "fontSize": "64px", "lineHeight": "72px", "letterSpacing": "-0.02em" }, "$type": "typography" },
          "tablet":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.black}", "fontSize": "48px", "lineHeight": "56px", "letterSpacing": "-0.02em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.extrabold}", "fontSize": "36px", "lineHeight": "44px", "letterSpacing": "-0.015em" }, "$type": "typography" }
        },
        "display-sm": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.extrabold}", "fontSize": "48px", "lineHeight": "56px", "letterSpacing": "-0.02em" }, "$type": "typography" },
          "tablet":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.extrabold}", "fontSize": "36px", "lineHeight": "44px", "letterSpacing": "-0.015em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "28px", "lineHeight": "36px", "letterSpacing": "-0.01em" }, "$type": "typography" }
        },
        "headline": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.extrabold}", "fontSize": "40px", "lineHeight": "48px", "letterSpacing": "-0.015em" }, "$type": "typography" },
          "tablet":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.extrabold}", "fontSize": "32px", "lineHeight": "40px", "letterSpacing": "-0.01em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "28px", "lineHeight": "36px", "letterSpacing": "-0.01em" }, "$type": "typography" }
        },
        "title-1": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "28px", "lineHeight": "36px", "letterSpacing": "-0.01em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "22px", "lineHeight": "30px", "letterSpacing": "0em" }, "$type": "typography" }
        },
        "title-2": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "22px", "lineHeight": "30px", "letterSpacing": "0em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.semibold}", "fontSize": "18px", "lineHeight": "26px", "letterSpacing": "0em" }, "$type": "typography" }
        },
        "title-3": {
          "desktop": { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.semibold}", "fontSize": "18px", "lineHeight": "26px", "letterSpacing": "0em" }, "$type": "typography" },
          "mobile":  { "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.semibold}", "fontSize": "16px", "lineHeight": "24px", "letterSpacing": "0em" }, "$type": "typography" }
        },
        "body-lg": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.regular}", "fontSize": "18px", "lineHeight": "28px", "letterSpacing": "0em" },
          "$type": "typography"
        },
        "body": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.regular}", "fontSize": "16px", "lineHeight": "24px", "letterSpacing": "0em" },
          "$type": "typography"
        },
        "body-emphasis": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.medium}", "fontSize": "16px", "lineHeight": "24px", "letterSpacing": "0em" },
          "$type": "typography"
        },
        "callout": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.medium}", "fontSize": "16px", "lineHeight": "24px", "letterSpacing": "0em" },
          "$type": "typography"
        },
        "subheadline": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.semibold}", "fontSize": "14px", "lineHeight": "20px", "letterSpacing": "0.005em" },
          "$type": "typography"
        },
        "footnote": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.regular}", "fontSize": "13px", "lineHeight": "18px", "letterSpacing": "0.01em" },
          "$type": "typography"
        },
        "caption-1": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.medium}", "fontSize": "12px", "lineHeight": "16px", "letterSpacing": "0.015em" },
          "$type": "typography"
        },
        "caption-2": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.medium}", "fontSize": "11px", "lineHeight": "14px", "letterSpacing": "0.02em" },
          "$type": "typography"
        },
        "overline": {
          "$value": { "fontFamily": "{copart.typography.font-family.primary}", "fontWeight": "{copart.typography.font-weight.bold}", "fontSize": "11px", "lineHeight": "16px", "letterSpacing": "0.08em", "textTransform": "uppercase" },
          "$type": "typography"
        }
      }
