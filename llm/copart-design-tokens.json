    "spacing": {
      "0":  { "$value": "0px",   "$type": "dimension" },
      "1":  { "$value": "4px",   "$type": "dimension", "$description": "Inline icon gap, tight padding" },
      "2":  { "$value": "8px",   "$type": "dimension", "$description": "Default icon-to-label gap" },
