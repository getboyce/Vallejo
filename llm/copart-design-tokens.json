          "100": { "$value": "#EEF2FC", "$type": "color", "$description": "Brand lightest — hover backgrounds" },
          "200": { "$value": "#E1E9FA", "$type": "color", "$description": "Brand light — selected rows, info fills" },
          "600": { "$value": "#2662D9", "$type": "color", "$description": "Brand primary — CTAs, active links" },
          "800": { "$value": "#063598", "$type": "color", "$description": "Brand dark — hover states" },
          "900": { "$value": "#0F2757", "$type": "color", "$description": "Brand darkest — titles, critical text" }
